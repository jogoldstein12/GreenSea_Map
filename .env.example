# ====================================
# Multi-City GIS Portfolio Analyzer
# Environment Configuration Example
# ====================================
# Copy this file to .env and update values as needed
# Command: copy .env.example .env

# ====================================
# Application Settings
# ====================================
APP_NAME="Multi-City GIS Portfolio Analyzer"
APP_ENV=development
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# ====================================
# Database Configuration
# ====================================
# For local Docker setup (default):
DB_HOST=localhost
DB_PORT=5432
DB_NAME=multi_city_gis
DB_USER=postgres
DB_PASSWORD=postgres

# Alternative: Full database URL (overrides above settings if provided)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multi_city_gis

# ====================================
# File Upload Configuration
# ====================================
MAX_FILE_SIZE_MB=500
ALLOWED_EXTENSIONS=csv,shp,shx,dbf,prj,cpg,xml,xlsx,xls
UPLOAD_DIR=data/uploads/temp

# ====================================
# Map Configuration
# ====================================
DEFAULT_ZOOM=11
DEFAULT_MAP_TILES=cartodbpositron

# ====================================
# Performance Settings
# ====================================
CACHE_TTL=3600
MAX_PARCELS_WARNING=50000
GEOMETRY_SIMPLIFY_TOLERANCE=0.0001

# ====================================
# Security Settings
# ====================================
ENABLE_DATA_UPLOAD=True
ENABLE_DATA_DELETE=True
REQUIRE_AUTH=False

# ====================================
# Logging Configuration
# ====================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ====================================
# Notes for Production
# ====================================
# When deploying to production:
# 1. Change SECRET_KEY to a random string (e.g., use: python -c "import secrets; print(secrets.token_hex(32))")
# 2. Set APP_ENV=production
# 3. Set DEBUG=False
# 4. Update DB_PASSWORD to a secure password
# 5. Consider setting REQUIRE_AUTH=True
# 6. Update DATABASE_URL if using external database (e.g., Heroku, AWS RDS)
